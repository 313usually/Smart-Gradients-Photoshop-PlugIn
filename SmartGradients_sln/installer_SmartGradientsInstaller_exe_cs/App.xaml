<Application x:Class="SmartGradientsInstaller.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml" ShutdownMode="OnExplicitShutdown"
             
             >
    <Application.Resources>

        <Style x:Key="WindowName" TargetType="Label">
            <Setter Property="Margin" Value="15,45,0,0"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontFamily" Value="Segoe UI Light"/>
            <Setter Property="Foreground" Value="#ff505050"/>
        </Style>
     
        <Style x:Key="AdditionalText" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="#ff505050"/>
        </Style>

    </Application.Resources>
</Application>
