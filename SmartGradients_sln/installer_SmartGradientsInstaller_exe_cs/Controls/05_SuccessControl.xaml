<UserControl x:Class="SmartGradientsInstaller.Controls.SuccessControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartGradientsInstaller.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Style="{StaticResource WindowName}">Success</Label>
        <TextBlock Style="{StaticResource AdditionalText}" Width="500" Margin="25,310,0,0">Smart Gradients Beta plugin for Adobe® Photoshop® is successfully installed. <LineBreak></LineBreak>
        Go to Filters -> Smart Gradients Beta -> Launch Smart Gradients <LineBreak></LineBreak> to open plug-in in Photoshop®.
        </TextBlock>

    </Grid>
</UserControl>
