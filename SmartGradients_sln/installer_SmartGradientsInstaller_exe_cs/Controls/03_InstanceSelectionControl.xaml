<UserControl x:Class="SmartGradientsInstaller.Controls.InstanceSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartGradientsInstaller.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Style="{StaticResource WindowName}">Instance Selection</Label>
        <TextBlock Name="InfoTxtBx" Style="{StaticResource AdditionalText}" Width="600" Margin="20,100,0,0">Installer has detected following instances of Adobe® Photoshop® installed on your machine. Please, select instances for which you want to install plug-in. If installer has not found instance autmatically, you may add it manually by clicking button under.</TextBlock>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20,180,200,80">
            <StackPanel Name="InstanceList" Orientation="Vertical"></StackPanel>
        </ScrollViewer>
        <Button Name="SelectPhotoshopFolderButton" Width="150" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,10,10,10" Click="SelectPhotoshopFolderButton_Click">Select Folder Manually</Button>
    </Grid>
</UserControl>
