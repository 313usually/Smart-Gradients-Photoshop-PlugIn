<UserControl x:Class="SmartGradientsInstaller.Controls.FailureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartGradientsInstaller.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Style="{StaticResource WindowName}">Failure</Label>
        <TextBlock Name="FailureMsg" Style="{StaticResource AdditionalText}" Width="500" Margin="25,310,0,0">Installation of Smart Gradients Beta plugin for Adobe® Photoshop® failed with following message: </TextBlock>
    </Grid>
</UserControl>
